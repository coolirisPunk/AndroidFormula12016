<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:weightSum="4"
    android:background="@color/text_grey"
    android:divider="@color/black">

    <TextView android:id="@+id/nombre" android:layout_gravity="center_vertical|left" android:layout_weight="1" android:text="Nombre producto" android:textSize="15sp" android:textStyle="bold" android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/cantidad" android:layout_gravity="center_vertical" android:text="$10.00 MXN" android:layout_weight="1" android:textSize="15sp" android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <TextView android:id="@+id/precio" android:layout_gravity="center_vertical" android:text="$10.00 MXN" android:layout_weight="1" android:textSize="15sp" android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <ImageButton android:id="@+id/eliminar" android:layout_weight="1"
        android:background="@drawable/cerrar_boton" android:text="@string/eliminar"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:gravity="center_horizontal|center"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</TableRow>