<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="100"
    >
    <TextView android:id="@+id/item_id" android:layout_weight="0" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/nombre" android:layout_weight="40" android:layout_gravity="center_vertical"  android:textSize="15sp" android:textColor="@color/grey_color_strong"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/precio" android:layout_weight="30"  android:textSize="15sp" android:textColor="@color/red" android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
    <TextView android:id="@+id/item_price" android:layout_weight="0" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content"/>
    <ImageButton android:id="@+id/addToWishlis"
        android:layout_weight="30" android:background="@drawable/wishlist_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center" />
</TableRow>