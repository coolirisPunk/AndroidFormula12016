<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="false"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardMaxElevation="1dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_centerInParent="true"
            />
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="200dp"
            android:layout_height="162dp"
            android:background="@color/black_transparency"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/container_title_premio"
            android:gravity="top"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OHHHHHHHHOHHHHHHHHOHHHHHHHHOHHHHHHHHOHHHHHHHH"
                android:id="@+id/name"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:maxWidth="250dp"
                android:layout_alignParentStart="true"
                android:gravity="start"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/container_sitio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/name">
                <ImageView
                    android:id="@+id/sitioicon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/website"
                    android:gravity="start"
                    android:layout_marginEnd="4dp"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:maxLength="20"
                    android:id="@+id/sitiourl"
                    android:fontFamily="sans-serif-condensed"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/container_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/container_sitio">
                <ImageView
                    android:id="@+id/telefonoicon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/telefono"
                    android:gravity="start"
                    android:layout_marginEnd="4dp"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:maxLength="20"
                    android:id="@+id/telefono"
                    android:clickable="true"
                    android:onClick="llamarHospedaje"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="12sp"
                    />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_telefono">
                <TextView
                    android:id="@+id/vermas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_toStartOf="@+id/vermasbutton"
                    android:text="VER EN MAPA"/>
                <ImageButton
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:id="@+id/vermasbutton"
                    android:layout_width="28dp"
                    android:layout_height="15dp"
                    android:background="@drawable/arrow_colors" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>